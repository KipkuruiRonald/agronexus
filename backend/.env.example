# AgroNexus Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# Authentication Security
SECRET_KEY=your_secure_jwt_secret_key_change_in_production
ALGORITHM=HS256
PASSWORD_SALT=your_secure_password_salt_change_in_production

# Database Configuration (Optional - defaults will be used)
DATABASE_URL=your_database_url_if_using_direct_connection
DATABASE_MAX_CONNECTIONS=20

# API Configuration (Optional)
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Environment
ENVIRONMENT=development
